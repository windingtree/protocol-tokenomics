{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "composite": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": ["src"],
  "ts-node": {
    "esm": true
  }
}
